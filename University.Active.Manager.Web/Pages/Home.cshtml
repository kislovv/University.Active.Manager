@page
@model University.Active.Manager.Web.Pages.Home

@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="ru">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<head>
    <title>Профиль студента</title>
</head>
<body>
 <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
<div class="container">
    <h2> Студент @Model.Profile.Student.FirstName @Model.Profile.Student.MiddleName @Model.Profile.Student.LastName</h2>

    <h3>Колличество баллов : @Model.Profile.Score</h3>
    Участвовал в мероприятиях: <br>
    @foreach (var ev in Model.Profile.Events)
    {
        @ev.Name
        <br>
    }
    <figure class="figure">
      <img src="@Model.Profile.ProfilePhotoPath" class="figure-img img-fluid rounded" alt="Фото профиля" width="15%" height="15%">
      <figcaption class="figure-caption">Фото профиля</figcaption>
    </figure>
</div>
</body>
</html>